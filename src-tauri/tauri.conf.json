{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Quip Network Node",
  "version": "0.1.0-alpha.1",
  "identifier": "network.quip.node",
  "build": {
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Quip Network Testnet Node",
        "width": 800,
        "height": 700,
        "minWidth": 600,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns"
    ],
    "targets": "all",
    "resources": [
      "resources/python/**/*",
      "resources/site-packages/**/*",
      "resources/quip-node/**/*",
      "resources/genesis_block_public.json"
    ],
    "macOS": {
      "minimumSystemVersion": "11.0"
    },
    "windows": {
      "wix": null,
      "nsis": {
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
